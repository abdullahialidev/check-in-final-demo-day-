
<body id="top">
  <head>
    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <title>Review</title>
    <%- include('partials/header') -%>
    <nav class="navbar navbar-expand-lg navigation" id="navbar">
      <div class="container">
        <a class="navbar-brand" href="index.html">
          <img src="../imgs/logo.png" alt="" class="img-fluid">
        </a>
    
        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarmain"
          aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
          <span class="icofont-navigation-menu"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarmain">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </head>  
  <section class="section student-single">
    <div class="container">
      <div class="row">
        <div class="divider my-4"></div>
        <div>
          <h2 class="text-md"><%= post.studentName%></h2>
          <div>
            Grade: <%= post.grade%> </br>
            Message: <%= post.message%> </br>
          </div>
          <div>
            <bold>Sentiment Analysis</bold>
            <div>
              Score: <%=analysis.score%> </br>
              Positive Words : <%=analysis.positive%> </br>
              Negative Words: <%=analysis.negative%> </br>
              Tokens: <%=analysis.tokens%> </br>
              Comparative: <%=analysis.comparative%> </br>
            </div>
        </div>
        <form
        class="col-1"
        action="/post/completeReview/<%= post.id %>?_method=POST"
        method="POST"
        >
        <button class="btn btn-main-2 btn-round-full mt-3">Mark As Checked<i
          class="icofont-simple-right ml-2  "></i></button>
      </form>
      </div>
    </div>
  </section>
  
  
    </body>
<%- include('partials/footer') -%>